<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#FFFFFF"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_project_iv"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/item_project_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_project_iv"
            android:layout_marginLeft="10dp"
            android:text="一个模仿企鹅 FM 界面的 Android 应用;喜马拉雅Kotlin。完全使用 Kotlin 开发。"
            android:singleLine="true"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_project_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_project_title"
            android:layout_alignLeft="@id/item_project_title"
            android:layout_marginTop="5dp"
            android:text="一个模仿企鹅 FM 界面的Android;喜马拉雅Kotlin。完全使用 Kotlin 开发。有声资源和播放器由喜马拉雅 SDK 提供。 主要功能：
1,在线播放专辑点播2,在线播放国家/省/市广播电台3,最近收听4,搜索节目/专辑/广播（包括热搜词）"
            android:textSize="12sp"
            android:lines="5" />

        <TextView
            android:id="@+id/item_project_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_project_iv"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:text="作者:gs666" />

        <TextView
            android:id="@+id/item_project_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_project_author"
            android:layout_alignBottom="@id/item_project_author"
            android:layout_marginLeft="20dp"
            android:textSize="13sp"
            android:text="分类:完整项目"/>

        <TextView
            android:id="@+id/item_project_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/item_project_author"
            android:text="2017-11-11 23:24"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>