<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#FFFFFF"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日一问|Fragment是如何被存储与恢复的"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_question_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xiaoyang"
            android:layout_below="@id/item_question_title"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问答/官方"
            android:layout_alignBottom="@id/item_question_author"
            android:layout_toRightOf="@id/item_question_author"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/item_question_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-0326 00:10"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/item_question_author"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>