<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#FFFFFF"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_square_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杀不掉的知乎，聊一聊安卓的多任务"
            android:textSize="22sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/item_square_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享人：鸿洋"
            android:layout_below="@id/item_square_title"
            android:layout_marginTop="5dp"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/item_square_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4小时前"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/item_square_author"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>